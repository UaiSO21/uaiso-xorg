pkgname=uaiso-xorg
pkgver=$(date +%y.%m.%d)
pkgrel=$(date +%H%M)
pkgdesc="Meta package for Xorg"
arch=('any')
url="https://github.com/UaiSO21/$pkgname"
license=('GPL3')
depends=(
    'xorg-mkfontscale'
    'xorg-server'
    'xorg-xdpyinfo'
    'xorg-xdriinfo'
    'xorg-xinit'
    'xorg-xinput'
    'xorg-twm'
    'xorg-xgamma'
    'xorg-xhost'
    'xorg-xkill'
    'xorg-xlsclients'
    'xorg-xrefresh'
    'xorg-xvinfo'
    'xorg-xwayland'
    'xorg-xwininfo'
     )
provides=("$pkgname")
# conflicts=('')
source=("git+${url}.git")
md5sums=('SKIP')
if [ -e "${pkgname}.install" ];then
    install=${pkgname}.install
fi

package() {

    InternalDir="${srcdir}/${pkgname}"

    # Copy files
    if [ -d "${InternalDir}/usr" ]; then
        cp -r "${InternalDir}/usr" "${pkgdir}/"
    fi

    if [ -d "${InternalDir}/etc" ]; then
        cp -r "${InternalDir}/etc" "${pkgdir}/"
    fi

    if [ -d "${InternalDir}/opt" ]; then
        cp -r "${InternalDir}/opt" "${pkgdir}/"
    fi
}
